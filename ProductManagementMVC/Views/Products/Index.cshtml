
 @model IEnumerable<BusinessObjects.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1 class="mb-4 text-primary">Product List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.UnitsInStock)</th>
            <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th style="width: 220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
            <td>@Html.DisplayFor(modelItem => item.UnitsInStock)</td>
            <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning me-1">
                    Edit
                </a>
                <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info me-1 text-white">
                    Details
                </a>
                <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

