 @model BusinessObjects.Models.Product

@{
    ViewData["Title"] = "Edit";
}

@* <h1>Edit Product</h1> *@

<div class="card shadow-sm mb-4 bg-light" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title mb-3">Product Details</h4>
        <form asp-action="Edit" novalidate>
            <input type="hidden" asp-for="ProductId" />

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UnitsInStock" class="form-label"></label>
                <input asp-for="UnitsInStock" class="form-control" />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="UnitPrice" class="form-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-save"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
