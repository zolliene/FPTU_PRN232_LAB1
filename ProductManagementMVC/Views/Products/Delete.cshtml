 @model BusinessObjects.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-3 text-danger fw-bold" style="font-size: 1.8rem;">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.964 0L.165 13.233c-.457.778.091 1.767.982 1.767h13.706c.89 0 1.438-.99.982-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
    </svg>
    Confirm Delete
</h1>

<p class="lead">Are you sure you want to delete this product?</p>

<div class="card shadow-sm p-4 mb-4 rounded" style="max-width: 600px; background: #fff6f6; border: 1px solid #f5c2c7;">
    <h4 class="text fw-semibold mb-3 border-bottom pb-1">Product Details</h4>
    <dl class="row" style="font-size: 1rem;">
        <dt class="col-sm-4 text-secondary fw-semibold"> @Html.DisplayNameFor(m => m.ProductName) </dt>
        <dd class="col-sm-8 border-bottom pb-1 mb-2"> @Html.DisplayFor(m => m.ProductName) </dd>

        <dt class="col-sm-4 text-secondary fw-semibold"> @Html.DisplayNameFor(m => m.UnitsInStock) </dt>
        <dd class="col-sm-8 border-bottom pb-1 mb-2"> @Html.DisplayFor(m => m.UnitsInStock) </dd>

        <dt class="col-sm-4 text-secondary fw-semibold"> @Html.DisplayNameFor(m => m.UnitPrice) </dt>
        <dd class="col-sm-8 border-bottom pb-1 mb-2"> @Html.DisplayFor(m => m.UnitPrice) </dd>

        <dt class="col-sm-4 text-secondary fw-semibold"> @Html.DisplayNameFor(m => m.Category) </dt>
        <dd class="col-sm-8 border-bottom pb-1 mb-2"> @Html.DisplayFor(m => m.Category.CategoryName) </dd>
    </dl>

    <form asp-action="Delete" method="post" class="d-flex gap-3 mt-4">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger px-4 shadow-sm" style="font-weight: 600; transition: background-color 0.3s;">
            Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm" style="font-weight: 600;">
            Cancel
        </a>
    </form>
</div>

<style>
    button.btn-danger:hover {
        background-color: #c82333;
        box-shadow: 0 0 10px rgba(200, 35, 51, 0.7);
        transform: translateY(-2px);
    }

    a.btn-outline-secondary:hover {
        background-color: #e2e6ea;
        transform: translateY(-2px);
    }
</style>
